{
  "name": "autoaccess",
  "version": "1.0.0",
  "description": "Complete Chrome MV3 extension for accessibility with AI-powered features",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/post-build.js",
    "build:check": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "package": "pnpm build && cd dist && zip -r ../autoaccess.zip .",
    "release": "pnpm build && pnpm package"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.1",
    "@radix-ui/react-slot": "^1.0.2",
    "axe-core": "^4.8.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lottie-web": "^5.12.2",
    "lucide-react": "^0.294.0",
    "openai": "^4.20.1",
    "pdfjs-dist": "^4.0.379",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0",
    "tesseract.js": "^5.0.2",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.251",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "keywords": [
    "accessibility",
    "chrome-extension",
    "ai",
    "ocr",
    "tts",
    "stt",
    "wcag",
    "axe-core"
  ],
  "author": "AutoAccess Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/autoaccess/autoaccess.git"
  },
  "homepage": "https://github.com/autoaccess/autoaccess#readme"
}
